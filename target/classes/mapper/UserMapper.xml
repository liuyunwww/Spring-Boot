<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jtxy.mapper.UserMapper">

    <select id="selectByUserMobile" resultType="com.jtxy.entity.User">
        select id, username, age, mobile, password from user
        where mobile = #{mobile}
    </select>

</mapper>